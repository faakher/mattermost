{
    "name": "laravel-notification-channels/mattermost",
    "description": "Mattermost Notifications Drive for Laravel",
    "homepage": "https://github.com/laravel-notification-channels/mattermost",
    "license": "MIT",
    "authors": [
        {
            "name": "Faizan Amin",
            "email": "faizan.amin@media-xpertz.com",
            "homepage": "https://media-xpertz.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.9",
        "illuminate/notifications": "~10.0 || ~11.0",
        "illuminate/support": "~10.0 || ~11.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "NotificationChannels\\Mattermost\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NotificationChannels\\Mattermost\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    }
}
